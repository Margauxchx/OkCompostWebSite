<% content_for :title, "OkCompost / Inscription" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<section id="cover">
  <div id="cover-caption">
    <div id="container" class="container">
      <div class="row text-white ">
        <div class="col-sm-6 offset-sm-3 text-center">
          <br>
          <h1 class="text-center title_registration"> Inscrivez vous </h1>
          <br><br>
          <div class="info-form">
            <div>
                <%= f.email_field :email, autofocus: true, placeholder:raw("&#xf0E0;  Email"), autocomplete: "email", class:"form-control mb-3" %>
            </div>
            <div>
                <%= f.text_field :username, autofocus: true, placeholder:raw("&#xf007;  Pseudo"), autocomplete: "username", class:"form-control mb-3" %>
            </div>
            <div>
              <%= f.password_field :password, placeholder: raw("&#xf09c;  Mot de passe"), autocomplete: "new-password", class:"form-control" %>
              <% if @minimum_password_length %>
                <em class="text-secondary mb-3">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <br>
            </div>
            <div>
              <%= f.password_field :password_confirmation, placeholder: raw("&#xf023;  Confirmer le mot de passe"), autocomplete: "new-password", class:"form-control mb-5" %>
            </div>
            <div>
              <%= f.submit "S'inscrire", class:"btn btn-primary"  %>
            </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
