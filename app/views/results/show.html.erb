<head>
  <% provide :head_tags do %>
    <script>
    document.addEventListener("DOMContentLoaded", function(){
      let coordinates_array = <%= @coordinates_array %>;
      console.log(coordinates_array.length);
      if ( coordinates_array.length > 0 ){
        initMap( coordinates_array );
        }
    });
    </script>
  <% end %>
</head>

<% content_for :title, "OkCompost / Résultats" %>
<div class="container-fluid">
  <h1 class="my-2">Résultats :</h1>
  <div id="result-page" class="row">
    <div class="col-6 h-100">
      <div id='search-results'class="row">
        <% @result.result_lines.each do |result_line| %>
          <%= render result_line %>
        <% end %>
      </div>
    </div>
    <div id='result-map' class="col-6 fixed-top"></div>
  </div>
  <%= link_to 'Nouvelle recherche', root_path, class: 'btn btn-lg btn-info mb-3' %>
</div>


